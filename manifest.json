{
  "manifest_version": 2,
  "name": "YouTube Local",
  "version": "0.0.1",

  "description": "Save YouTube watch history or make playlist, everything locally.",
  "permissions": ["tabs"],
  "browser_action": {
    "default_title": "YouTube Local"
  },
  "icons": { 
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png" 
  },
  "background":{
    "scripts":["chromeInitial.js"]
  }
}